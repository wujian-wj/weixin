<!--miniprogram/pages/login/login.wxml-->

<view class="container">
  <i-input value="{{ name }}" title="用户名" autofocus placeholder="请输入用户名" bind:change='inputChange' maxlength="11"/>
  <i-input value="{{ password }}" type="password" title="密码" placeholder="请输入密码" bind:change='passwordChange' maxlength="20"/>
  <i-button type="primary" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">注册</i-button>
</view>
